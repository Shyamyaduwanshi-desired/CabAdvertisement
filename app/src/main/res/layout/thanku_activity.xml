<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/thanku_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:textColor="@color/darkblue"
            android:text="Thank you for the subscription.Our respresentive will communicate with you soon for further process."
            />
        <View
            android:id="@+id/view_id"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrayview"
            android:layout_marginTop="15dp"/>
        <Button
            android:id="@+id/thanku_button_id"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="Ok"
            android:background="@drawable/get_started_button"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</RelativeLayout>