<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@drawable/screenimglogin">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/iconlogin"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cab Advertisment"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle_button"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_payment_method"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Option"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/darkblue"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/paymenemethode_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_background"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="20dp"
                    android:text="Payment Mathed"
                    android:imeOptions="actionNext"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_wallet"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:paddingRight="20dp"
                    android:drawablePadding="15dp"/>
                <LinearLayout
                    android:id="@+id/methodes_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_background"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:paddingLeft="20dp"
                        android:text="Netbanking"
                        android:imeOptions="actionNext"
                        android:gravity="center_vertical"
                        android:drawablePadding="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_background"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:paddingLeft="20dp"
                        android:text="Crredit or Debit Card"
                        android:imeOptions="actionNext"
                        android:gravity="center_vertical"
                        android:drawablePadding="15dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_background"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:paddingLeft="20dp"
                        android:text="Cash On Delivery"
                        android:imeOptions="actionNext"
                        android:gravity="center_vertical"
                        android:drawablePadding="15dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/confirmbooking_button_id"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/get_started_button"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:text="Confirm Booking"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>